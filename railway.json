{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet publish webapi/webapi.csproj -c Release -o out"
  },
  "deploy": {
    "startCommand": "cd out && dotnet webapi.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
